<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_app"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:background="@drawable/reg_top3" />

    <ImageView
        android:layout_width="122dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/reg_top2" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/reg_top1"
        android:layout_marginRight="300dp"
        />
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="7dp"
        app:srcCompat="@drawable/back_arrow"/>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_marginLeft="32dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/reg_top4"/>

    <TextView
        android:id="@+id/Basic_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:text="Company Info"
        android:textSize="35dp"
        android:fontFamily="@font/revalia"
        android:textColor="@color/offBlack"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_below="@id/Basic_info"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/black_bg">

        <TextView
            android:id="@+id/fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company Name"
            android:layout_marginTop="5dp"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/etComName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/fname"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_bg"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_below="@id/linearLayout1"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/black_bg">

        <TextView
            android:id="@+id/cName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Categories"
            android:layout_marginTop="5dp"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/cat1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/cName"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_bg" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cat1"
            android:text="Additional Categories"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="17dp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/cat2"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_bg" />

        <Spinner
            android:id="@+id/cat3"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_below="@id/txt"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:autofillHints="jds"
            android:background="@drawable/input_bg" />



    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_below="@id/linearLayout2"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/black_bg">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Labors"
            android:layout_marginTop="5dp"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/noOfLabors"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/email"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_bg"
            android:hint="Minimum 5"
            android:paddingLeft="15dp"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/bottom_black"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="80dp"
        android:background="@drawable/bottom_off" />

    <Button
        android:id="@+id/doneBtn"
        android:layout_width="139dp"
        android:layout_height="41dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_radius"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:layout_marginBottom="15dp"
        android:textColor="@color/offBlack"
        android:textSize="18dp"
        android:textStyle="bold"
        app:backgroundTint="@color/my_app" />
</RelativeLayout>