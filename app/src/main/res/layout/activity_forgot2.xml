<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_app"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@drawable/forgot_top"/>
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/back_arrow"/>

    <TextView
        android:id="@+id/Sign_In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="80dp"
        android:text="Verification"
        android:textSize="40dp"
        android:fontFamily="@font/revalia"
        android:textColor="@color/offBlack"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Verification Code"
        android:layout_below="@id/Sign_In"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:textSize="29dp"
        android:fontFamily="@font/anekbangla"
        android:textColor="@color/offBlack" />

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/enter"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/otp_box"
            android:id="@+id/otp1"
            android:gravity="center"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/offBlack"
            android:textSize="24dp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/otp_box"
            android:id="@+id/otp2"
            android:gravity="center"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/offBlack"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_marginLeft="13dp" />
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/otp_box"
            android:id="@+id/otp3"
            android:gravity="center"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:textColor="@color/offBlack"
            android:layout_marginLeft="13dp"
            android:textSize="24dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/otp_box"
            android:id="@+id/otp4"
            android:gravity="center"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="13dp"
            android:textColor="@color/offBlack"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/otp_box"
            android:id="@+id/otp5"
            android:gravity="center"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="13dp"
            android:textColor="@color/offBlack"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/otp_box"
            android:id="@+id/otp6"
            android:gravity="center"
            android:maxLines="1"
            android:imeOptions="actionNext"
            android:importantForAutofill="no"
            android:inputType="number"
            android:maxLength="1"
            android:layout_marginLeft="13dp"
            android:textColor="@color/offBlack"
            android:textSize="24dp"
            android:textStyle="bold"/>



    </LinearLayout>


    <TextView
        android:id="@+id/sendCodeAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin1"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/anekbangla"
        android:text="If you don't receive a code resend"
        android:textColor="@color/offBlack"
        android:textSize="18dp" />


    <Button
        android:id="@+id/verifyBtn"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/sendCodeAgain"
        android:background="@drawable/button_radius"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:text="Verify"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        app:backgroundTint="@color/offBlack" />

    <ImageView
        android:id="@+id/bottom_black"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="250dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/forgot_bottom" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="167dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/forgot2_bottom" />
</RelativeLayout>